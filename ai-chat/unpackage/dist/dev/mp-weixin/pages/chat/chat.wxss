.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}
.chat-container .chat-list {
  flex: 1;
  padding: 20rpx;
}
.chat-container .chat-item {
  margin-bottom: 20rpx;
}
.chat-container .message {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-break: break-all;
}
.chat-container .message.user-message {
  background-color: #007AFF;
  color: #fff;
  margin-left: auto;
}
.chat-container .message.ai-message {
  background-color: #fff;
  color: #333;
}
.chat-container .input-area {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}
.chat-container .input-area .message-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
}
.chat-container .input-area .send-btn {
  margin-left: 20rpx;
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  color: #fff;
  border-radius: 20rpx;
  font-size: 16rpx;
}
button {
  margin: 0;
  padding: 0;
}
button::after {
  border: none;
}
.input-area {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}